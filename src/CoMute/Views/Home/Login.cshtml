@model CoMute.Web.Models.Dto.LoginRequest

@{
    ViewBag.Title = "Home";

    var errorMessage = TempData.ContainsKey("Error") ? TempData["Error"].ToString() : "";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form id="login" method="post" action="@Url.Action("Login")">
            <h2 class="text-center">Sign In</h2>
            <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus name="email" value="@Model.Email">
            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required name="password">
            <button class="btn btn-primary btn-block" type="submit" id="sign-in">Sign in</button>
            <p>@errorMessage</p>
        </form>
    </div>
</div>

<div id="error" class="row row-margin hidden">
    <div class="col-md-4 col-md-offset-4 alert alert-danger">
        <p></p>
    </div>
</div>

